{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Nepal Citizen Service Portal with PostgreSQL database",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-all.js",
    "debug": "node debug-db.js",
    "check": "node simple-test.js",
    "db:setup": "psql -U postgres -f enhanced-schema.sql",
    "db:reset": "psql -U postgres -c 'DROP DATABASE IF EXISTS gunaso;' && psql -U postgres -c 'CREATE DATABASE gunaso;' && npm run db:setup"
  },
  "keywords": [
    "nepal",
    "citizen-service",
    "e-governance",
    "complaint-management",
    "api"
  ],
  "author": "Nepal Government",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "pg": "^8.11.3",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}